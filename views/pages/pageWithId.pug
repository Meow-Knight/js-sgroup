extends ../layout/main.pug

block content
    form(action="/article/edit/" + article._id + "  ?_method=PUT", method="post")
        strong #{article.title} 
        br
        textarea#ip_content.form-control(rows='3', name='content', disabled=true) #{article.content}
        br

        button.btn.btn-light(type='button', onclick='backToHome()') Back
        button.btn.btn-secondary(type='button', onclick='enableEdit()') Edit
        button.btn.btn-success(type='submit') Save


block scripts
    script(src='/js/pageWithId.js')